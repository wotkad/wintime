.forecasts-tags
	&__filter
		display none
		box-shadow: 0px 12px 18px rgba(90, 62, 126, 0.05), 0px 0px 1px rgba(10, 31, 68, 0.1);
		flex-wrap wrap
		background-color #eee
		border-radius 15px
		justify-content space-between
		margin-bottom 20px
		&-titles
			flex-basis 100%
			display flex
			justify-content space-between
			background-color #fefefe
			border-radius 15px
			align-items center
			padding 10px 20px
			&-title
				font-family $Bold
				line-height 24px
				font-size 1.125rem
				color $sidebarbg
			&-arrow
				cursor pointer
				transition .3s
				& i
					font-size 18px
					color $sidebarbg
		&__container
			display flex
			justify-content space-between
			flex-basis 100%
			padding 20px
			&-filter
				flex-basis 48%
				position relative
				padding-right 4.5%
				&:nth-child(1)
					border-right 1px solid #f5f5f5
				&:nth-child(2)
					padding-right 0
					border none
				&-title
					text-transform uppercase
					font-family $Bold
					font-size 0.5rem
					line-height 11px
					margin-bottom 17px
					color $sidebarlink
				&-selector
					display flex
					align-items center
					position relative
					&-select
						position relative
						border 1px solid $purple
						padding 11px
						border-radius 30px
						cursor pointer
						font-family $Regular
						font-size 0.625rem
						line-height 12px
						color $purple
						width 100%
						text-transform uppercase
						position relative
						&-arrow
							position absolute
							right 0
							top 0
							border-radius 0 26px 26px 0
							background $buttongradient
							height 36px
							width 30px
							display flex
							align-items center
							justify-content center
							& i
								font-size 14px
								transition .3s
								line-height 7px
								color $white
				&-filters
					background-color $white
					border-radius 8px
					margin-top 10px
					width 100%
					padding 20px
					z-index 2
					position absolute
					display none
					box-shadow 0px 12px 18px rgba(90, 62, 126, 0.2), 0px 0px 1px rgba(10, 31, 68, 0.1)
					&__option
						font-family $SemiBold
						font-size 0.625rem
						cursor pointer
						line-height 13px
						margin-bottom 10px
						color $black
						transition .3s
						&:last-child
							margin-bottom 0
						&:hover
							color #949494
	&__text
		border-radius 15px
		background $white
		margin-bottom 20px
		padding 20px 25px
		box-shadow 0px 12px 18px rgba(90, 62, 126, 0.05), 0px 0px 1px rgba(10, 31, 68, 0.1)
		&-title
			font-family $Bold
			font-size 1.125rem
			line-height 24px
			color $text
			margin-bottom 15px
		&-desc
			font-size 0.75rem
			font-family $Regular
			color $text
			line-height 24px
			span
				&:nth-child(1)
					font-size 1.125rem
					font-family $Regular
					color $text
					margin-left 3px
					line-height 24px
				&:nth-child(2)
					font-size 1.125rem
					font-family $Bold
					color $text
					line-height 24px
				&:nth-child(3)
					font-size 1.125rem
					font-family $Regular
					color $text
					line-height 24px
				&:nth-child(4)
					font-size 1.125rem
					font-family $Regular
					color $text
					margin-left 3px
					line-height 24px
	&__blocks
		display flex
		flex-wrap wrap
		justify-content space-between
		.swiper-pagination-bullets
			display none
			bottom 0
		&-block
			box-shadow 0px 12px 18px rgba(90, 62, 126, 0.05), 0px 0px 1px rgba(10, 31, 68, 0.1)
			flex-basis calc(33.33334% - 15px)
			background-color $white
			border-radius 15px
			&:nth-child(3n+3)
				margin-right 0
			&__body
				padding 20px 25px
				height 250px
				display flex
				flex-wrap wrap
				border-radius 15px 15px 0 0
				&-desc
					display flex
					flex-basis 100%
					flex-wrap wrap
					height 50px
					&-item
						i
							color $yellow
							margin-right 5px
							font-size 0.625rem
						span
							color $white
							font-size 0.625rem
							margin-right 15px
							text-transform uppercase
							font-family $Regular
				&-titles
					align-self flex-end
					flex-basis 100%
					&-category
						margin-bottom 10px
						font-family $Regular
						color $white
						text-transform uppercase
						font-size 0.75rem
						line-height 14px
						display flex
						align-items center
						i
							color $yellow
							margin-right 4px
					&-title
						font-size 1.125rem
						font-family $Bold
						line-height 24px
						color $white
						margin-bottom 6px
					&-rate
						&-container
							background $purple
							padding 7px 10px
							display inline-block
							border-radius 6px
							span
								font-size 0.75rem
								color $white
								line-height $white
								&:nth-child(1)
									font-family $Regular
								&:nth-child(2)
									margin-left 3px
									font-family $Bold
			&__footer
				padding 15px 25px
				display grid
				grid-template-columns 15% 52% 33%
				&-photo
					grid-row 1 / 3
					height 32px
					width 32px
					& img
						width 100%
				&-title
					grid-row 1 / 2
					font-family $SemiBold
					font-size 0.875rem
					color $text
					line-height 17px
				&-author
					grid-row 2 / 3
					color $text
					font-family $Regular
					line-height 18px
					font-size 0.75rem
				&-button
					grid-row 1 / 3
					display flex
					align-items center
					justify-content center
					border-radius 25px
					font-family $Bold
					padding 11px
					font-size 0.75rem
					text-transform uppercase
					color $white
					box-shadow 0px 4px 20px rgba(84, 53, 124, 0.3)
					background linear-gradient(158.89deg, #9537A5 25.2%, #7140B3 79.4%)
					transition .3s
					border 2px solid transparent
					&:hover
						background $white
						color $purple
						border 2px solid $purple
		&-button
			margin 20px auto 0 auto
			&-item
				background linear-gradient(158.89deg, #9537A5 25.2%, #7140B3 79.4%)
				box-shadow 0px 4px 20px rgba(84, 53, 124, 0.3)
				border-radius 25px
				font-family $Bold
				padding 11px 21px
				font-size 0.75rem
				text-transform uppercase
				color $white
				display inline-block
				transition .3s
				border 2px solid transparent
				&:hover
					background $white
					color $purple
					border 2px solid $purple
	&__navigation
		display flex
		justify-content space-between
		align-items center
		margin-bottom 40px
		&-numbers
			display flex
			&-number
				font-family $Regular
				font-size 1.125rem
				line-height 24px
				display flex
				align-items center
				justify-content center
				margin 0 5px
				transition .3s
				&:hover
					color $purple
				&-active
					border-radius 50%
					width 38px
					height 38px
					color $white
					background $buttongradient
		&-prev,
		&-next
			p
				display block
				font-family $Bold
				font-size 0.75rem
				color $purple
				line-height 14px
				padding-bottom 2px
				text-transform uppercase
				transition .3s
				border-bottom 1px solid transparent
			i
				display none
				margin-top -1px
			&:hover
				border-color $purple
		&-next
			i
				margin-right -1px
		&-prev
			i
				margin-left -1px
	&__tags
		box-shadow 0px 12px 18px rgba(90, 62, 126, 0.05), 0px 0px 1px rgba(10, 31, 68, 0.1)
		border-radius 15px
		display flex
		flex-wrap wrap
		background-color $white
		padding 25px 25px 14px 25px
		&-title
			font-family $Bold
			line-height 24px
			font-size 1.125rem
			color $text
			margin-right 15px
		&-item
			display flex
			align-items center
			justify-content center
			border 1px solid $purple
			border-radius 30px
			font-family $Regular
			font-size 0.625rem
			color $purple
			padding 8px
			min-width 100px
			margin 0 5px
			margin-bottom 11px
			transition .3s
			&:hover
				background-color $purple
				color $white
@media(max-width: 1300px)
	.forecasts-tags
		&__blocks
			&-block
				&__footer
					grid-template-columns 15% 70% 15%
					&-title
						padding-left 5px
					&-author
						padding-left 5px
					&-button
						width 38px
						height 38px
						p
							display none
						i
							font-size 15px
							margin-top -2px
							margin-right -2px
							display flex
@media(max-width: 1140px)
	.forecasts-tags
		&__blocks
			.swiper-container-forecasts
				.swiper-wrapper
					padding-bottom 30px
				.swiper-pagination-bullets
					display block
			&-block
				flex-basis calc(50% - 15px)
				&:nth-child(2n+2)
					margin-right 0
				&__footer
					position relative
					&-button
						position absolute
						right 25px
			&-button
				&-item
					padding 11px 111px
		&__navigation
			&-next,
			&-prev
				align-items center
				justify-content center
				border-radius 25px
				width 38px
				height 38px
				display flex
				font-size 16px
				text-transform uppercase
				color $white
				box-shadow 0px 4px 20px rgba(84, 53, 124, 0.3)
				background linear-gradient(158.89deg, #9537A5 25.2%, #7140B3 79.4%)
				transition .3s
				border 2px solid transparent
				&:hover
					background $white
					color $purple
					border 2px solid $purple
				p
					display none
				i
					display flex
@media(max-width: 991px)
	.forecasts-tags__filter
		display flex
@media(max-width: 768px)
	.forecasts-tags
		&__blocks
			&-block
				flex-basis calc(50% - 15px)
		&__filter
			&-titles
				padding 10px 20px
			&__container
				display flex
				justify-content space-between
				flex-basis 100%
				flex-wrap wrap
				&-filter
					margin-bottom 20px
					flex-basis 100%
					&:nth-child(1)
					&:nth-child(2)
						padding-right 0
						border-right none
@media(max-width: 650px)
	.forecasts-tags
		&__blocks
			&-block
				flex-basis 100%
				margin-right 0
				&__footer
					position relative
					&-button
						position relative
						right auto
			&-button
				&-item
					padding 11px 47px

