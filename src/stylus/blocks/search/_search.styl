.searchblock
	&__result
		margin 20px 0
		border-radius 15px
		background-color $white
		padding 25px
		&-title
			font-family $Regular
			font-size 1.125rem
			line-height 24px
			color $text
			margin-bottom 15px
		&-desc
			font-size 0.75rem
			font-family $Regular
			color $text
			line-height 24px
			span
				&:nth-child(1)
					font-size 1.125rem
					font-family $Regular
					color $text
					margin-left 3px
					line-height 24px
				&:nth-child(2)
					font-size 1.125rem
					font-family $Bold
					color $text
					line-height 24px
				&:nth-child(3)
					font-size 1.125rem
					font-family $Regular
					color $text
					line-height 24px
				&:nth-child(4)
					font-size 1.125rem
					font-family $Regular
					color $text
					margin-left 3px
					line-height 24px
	&__items
		display flex
		flex-wrap wrap
		margin-bottom 20px
		&-item
			flex-basis 100%
			background-color $white
			border-radius 15px
			padding 25px 25px 20px 25px
			display flex
			margin-bottom 10px
			&:last-child
				margin-bottom 0
			&-block
				flex-basis 50%
				display flex
				flex-direction column
				&:nth-child(1)
					align-items flex-start
				&:nth-child(2)
					align-items flex-end
				&-cat
					margin-bottom 8px
					font-family $Regular
					font-size 0.75rem
					text-transform uppercase
					color $text
					line-height 18px
				&-title
					font-size 1rem
					line-height 21px
					color $text
					font-family $Regular
				&-date
					margin-bottom 8px
					font-size 0.75rem
					line-height 18px
					color rgba(49, 49, 49, 0.6)
					font-family $Regular
				&-link
					& i
						color $purple
						font-size 28px
	&__back
		display none
		position relative
		padding 12px
		border-radius 15px
		justify-content center
		align-items center
		background-color $yellow
		transition .3s
		margin-bottom 20px
		&:hover
			background-color $white
		& i
			color $black
			font-size 18px
		& span
			color $black
			margin-left 12px
			font-family $Bold
			font-size 0.75rem
			text-transform uppercase
			line-height 11px
	&__form
		display flex
		justify-content space-between
		padding 30px 25px
		border-radius 15px
		background-color $white
		margin-bottom 20px
		margin-top 20px
		position relative
		&-img
			position absolute
			top calc(50% - 9px)
			left 47px
			& svg path
				fill $purple
		&-input
			width 100%
		&-button
			flex-basis 23%
			margin-left 30px
			display flex
			align-items center
			justify-content center
			border-radius 25px
			font-family $Bold
			padding 11px
			font-size 0.75rem
			text-transform uppercase
			color $white
			box-shadow 0px 4px 20px rgba(84, 53, 124, 0.3)
			background linear-gradient(158.89deg, #9537A5 25.2%, #7140B3 79.4%)
			transition .3s
			border 2px solid transparent
			cursor pointer
			&:hover
				background $white
				color $purple
				border 2px solid $purple
			& span
				display block
			& i
				display none
		& input
			font-family $Regular
			font-size 0.625rem
			color $text
			line-height 12px
			text-transform uppercase
			padding 13px 60px
			border 1px solid rgba(84, 53, 124, 0.6)
			border-radius 30px
			background transparent
	.bonuses__blocked__blocks
		&:last-child
			margin-bottom 0
	&__besttitles
		margin-top 20px
		background-color $white
		border-radius 15px
		display flex
		padding 18px 25px
		justify-content space-between
		align-items center
		&-title
			font-family $Bold
			font-size 1.125rem
			line-height 24px
			color $text
		&-button
			display flex
			align-items center
			justify-content center
			border-radius 25px
			font-family $Bold
			padding 11px
			font-size 0.75rem
			text-transform uppercase
			color $white
			width 202px
			box-shadow 0px 4px 20px rgba(84, 53, 124, 0.3)
			background linear-gradient(158.89deg, #9537A5 25.2%, #7140B3 79.4%)
			transition .3s
			border 2px solid transparent
			&:hover
				background $white
				color $purple
				border 2px solid $purple
@media(max-width: 991px)
	.searchblock
		&__back
			margin-top 30px
			display flex
		&__items
			&-item
				&-block
					&:nth-child(1)
						flex-basis 80%
					&:nth-child(2)
						flex-basis 20%
@media(max-width: 650px)
	.searchblock
		&__form
			&-img
				left 42px
			& input
				padding 13px 0 13px 40px
			&-button
				margin-left 25px
				max-width 48px
				display flex
				align-items center
				justify-content center
				max-height 48px
				& span
					display none
				& i
					display block
					font-size 20px
					margin-top -2px
