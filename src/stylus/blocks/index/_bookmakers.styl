
.bookmakers
	margin 20px 0
	&__titles
		background-color $white
		border-radius 15px
		display flex
		padding 25px
		justify-content space-between
		align-items center
		margin-bottom 20px
		box-shadow 0px 12px 18px rgba(90, 62, 126, 0.05), 0px 0px 1px rgba(10, 31, 68, 0.1)
		&-title
			font-family $Bold
			font-size 1.125rem
			color $text
			line-height 24px
		&-button
			background linear-gradient(158.89deg, #9537A5 25.2%, #7140B3 79.4%)
			box-shadow 0px 4px 20px rgba(84, 53, 124, 0.3)
			border-radius 25px
			font-family $Bold
			padding 11px 21px
			font-size 0.75rem
			text-transform uppercase
			color $white
			display inline-block
			transition .3s
			border 2px solid transparent
			&:hover
				background $white
				color $purple
				border 2px solid $purple
			i
				display none
	&__blocks
		display flex
		justify-content space-between
		border-radius 15px
		margin-bottom 10px
		box-shadow 0px 12px 18px rgba(90, 62, 126, 0.05), 0px 0px 1px rgba(10, 31, 68, 0.1)
		&-block
			display flex
			flex-wrap wrap
			&:nth-child(1)
				flex-basis 20%
				border-radius 15px 0 0 15px
			&:nth-child(2)
				flex-basis 80%
				padding 20px 30px
				border-radius 0 15px 15px 0
				background-color $white
			&__header
				display flex
				justify-content space-between
				flex-basis 50%
				&-button
					flex-basis 50%
					&:nth-child(1)
						.bookmakers__blocks-block__header-button-item
							border 2px solid $purple
							box-shadow 0px 4px 20px rgba(84, 53, 124, 0.3)
							border-radius 25px
							font-family $Bold
							padding 11px
							font-size 0.75rem
							text-transform uppercase
							color $purple
							text-align center
							margin-right 15px
							transition .3s
							&:hover
								background linear-gradient(158.89deg, #9537A5 25.2%, #7140B3 79.4%)
								color $white
								border 2px solid transparent
					&:nth-child(2)
						.bookmakers__blocks-block__header-button-item
							background linear-gradient(158.89deg, #9537A5 25.2%, #7140B3 79.4%)
							box-shadow 0px 4px 20px rgba(84, 53, 124, 0.3)
							border-radius 25px
							font-family $Bold
							padding 11px
							text-align center
							font-size 0.75rem
							text-transform uppercase
							color $white
							transition .3s
							border 2px solid transparent
							&:hover
								background none
								color $purple
								border 2px solid $purple
				&:nth-child(1)
					display grid
					grid-template-columns repeat(2, 1fr)
				&:nth-child(2)
					display flex
					justify-content space-between
				&-title
					font-size 1.125rem
					line-height 24px
					margin-bottom 5px
					color $text
					font-family $Bold
					grid-column 1 / 2
				&-desc
					font-family $Regular
					color #D6D6D6
					line-height 24px
					font-size 1.125rem
				&-rate
					margin-top 10px
					color $text
					font-family $Regular
					line-height 14px
					font-size 0.875rem
					margin-bottom 15px
					grid-column 1 / 2
					display flex
					& span
						margin-right 5px
					& i
						color #fad94e
						margin 0 2px
				&-prize
					height 50px
					width 50px
					grid-column 2 / 3
					grid-row 1 / 3
					position relative
					display flex
					justify-content center
					align-items center
					margin-left 20px
					flex-direction column
					&-bg
						background-color $purple
						position absolute
						transform rotate(45deg)
						width 50px
						height 50px
						z-index 2
						top 0
						border-radius 16px
						left 0
						right 0
						bottom 0
					span
						z-index 3
						position relative
						color $white
						font-size 0.625rem
						line-height 10px
						font-family $Regular
						&:nth-child(3)
							margin 2px 0
							color $yellow
							font-family $Bold
							font-size 0.75rem
							line-height 14px
			&__body
				display flex
				flex-basis 100%
				flex-wrap wrap
				margin-top 10px
				&-item
					flex-basis 40%
					margin-bottom 5px
					display flex
					align-items center
					i
						font-size 0.825rem
						color $yellow
						margin-right 10px
					span
						font-family $SemiBold
						font-size 0.75rem
						line-height 18px
						color $text
@media(max-width: 1220px)
	.bookmakers
		&__blocks
			&-block
				&:nth-child(1)
					flex-basis 50%
				&:nth-child(2)
					flex-basis 50%
				&__body
					flex-wrap wrap
					&-item
						flex-basis 100%
				&__header
					flex-basis 100%
					&:nth-child(2)
						margin-top 21px
						order 3
@media(max-width: 991px)
	.bookmakers
		&__blocks
			flex-wrap wrap
			&-block
				&:nth-child(1)
					flex-basis 100%
					height 200px
					border-radius 15px 15px 0 0
				&:nth-child(2)
					border-radius 0 0 15px 15px
					flex-basis 100%
@media(max-width: 768px)
	.bookmakers
		&__blocks
			&-block
				&:nth-child(1)
					height 100px
				&:nth-child(2)
					padding 10px 20px 27px
@media(max-width: 500px)
	.bookmakers
		&__titles
			&-button
				width 38px
				height 38px
				padding 9px 15px
				align-items center
				justify-content center
				p
					display none
				i
					font-size 15px
					display flex
