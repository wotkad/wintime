.matches
	box-shadow 0px 12px 18px rgba(90, 62, 126, 0.05), 0px 0px 1px rgba(10, 31, 68, 0.1)
	margin 20px 0 0
	border-radius 15px
	&__titles
		background-color $white
		border-radius 15px 15px 0 0
		display flex
		padding 25px
		justify-content space-between
		align-items center
		border-bottom 1px solid #f1f1f1
		&-title
			font-family $Bold
			font-size 1.125rem
			color $text
			line-height 24px
	&__table
		padding 0 25px
		background-color $white
		&-titles
			display flex
			border-bottom 1px solid #f1f1f1
			&-item
				font-family $Bold
				font-size 0.625rem
				line-height 13px
				color #6c6c6c
				flex-basis 20%
				padding 25px
				&:last-child
					flex-basis 35%
	&__tableitems
		flex-wrap wrap
		padding 0 25px 30px 25px
		display flex
		border-radius 0 0 15px 15px
		background-color $white
		&-items
			display flex
			width 100%
			&-item
				font-size 0.75rem
				line-height 18px
				color $text
				font-family $Regular
				display flex
				align-items center
				padding 25px
				flex-basis 20%
				&:last-child
					flex-basis 35%
				&-views
					background linear-gradient(158.89deg, #9537A5 25.2%, #7140B3 79.4%)
					box-shadow 0px 4px 20px rgba(84, 53, 124, 0.3)
					border-radius 25px
					padding 11px 21px
					font-size 0.75rem
					line-height 14px
					color $white
					display inline-block
					& span
						&:nth-child(1)
							font-family $Bold
						&:nth-child(2)
							margin-left 3px
							font-family $Regular
				&-prize
					display grid
					grid-template-columns 50% 50%
					width 100%
					&-img
						grid-row 1 / 3
						grid-column 1 / 2
					&-title
						font-size 0.625rem
						font-family $Bold
						color $black
						grid-column 2 / 3
						line-height 10px
					&-link
						&-content
							text-transform uppercase
							display inline-block
							color $purple
							grid-column 2 / 3
							font-size 0.625rem
							padding-bottom 2px
							line-height 10px
							font-family $Regular
							border-bottom 0.5px dashed rgba(84, 53, 124, 0.2)
							& span
								margin-left 3px
			&:nth-child(2n)
				background-color rgba(94, 63, 126, 0.05)
@media(max-width: 1180px)
	.matches
		&__table
			&-titles
				&-item
					padding 25px 15px
					flex-basis 17%
					&:nth-child(4)
						flex-basis 15%
					&:last-child
						flex-basis 35%
		&__tableitems
			&-items
				&-item
					padding 25px 15px
					flex-basis 17%
					&:nth-child(4)
						flex-basis 15%
					&:last-child
						flex-basis 35%
					&-views
						width 38px
						height 38px
						padding 11px
						display flex
						align-items center
						justify-content center
						& span
							&:nth-child(2)
								display none
@media(max-width: 768px)
	.matches
		&__table
			display none
		&__tableitems
			&-items
				display grid
				grid-template-columns repeat(6, 1fr)
				padding 25px 0
				&-item
					padding 5px 0
					&:nth-child(1)
						grid-column 1 / 5
						padding-right 10px
					&:nth-child(2)
						grid-column 1 / 5
						padding-right 10px
					&:nth-child(3)
						grid-column 1 / 5
						padding-right 10px
					&:nth-child(4)
						grid-column 1 / 7
						display flex
						justify-content center
						span
							display block
					&-views
						width auto
						height auto
						padding 11px 47px
					&:nth-child(5)
						grid-row 1 / 5
						grid-column 5 / 7
						padding-right 10px
					&-prize
						display flex
						flex-direction column
						&-title
							margin-bottom 5px
