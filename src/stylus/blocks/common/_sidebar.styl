.sidebar
	position fixed
	left 0
	top 130px
	width 220px
	z-index 2
	height calc(100% - 130px)
	background-color $white
	display flex
	flex-direction column
	padding-bottom 53px
	box-shadow 0px 10px 30px rgba(113, 71, 133, 0.1)
	.open &__container
		height auto
		overflow visible
	&__container
		overflow hidden
		display none
		transition .5s
		flex-direction column
		height 0
		&-match
			padding 20px
			display flex
			flex-wrap wrap
			justify-content space-between
			border-bottom 1px solid #F1F1F1
			&-title
				font-family $Bold
				line-height 14px
				font-size 0.75rem
				color $black
				margin-bottom 5px
			&-link
				display flex
				align-items center
				& i
					font-size 12px
					color $purple
				& span
					&:nth-child(2)
						font-size 0.75rem
						font-family $Light
						line-height 14px
						margin-left 3px
					&:nth-child(3)
						margin-left 3px
						font-size 0.75rem
						font-family $Bold
						line-height 14px
			&-item
				height 70px
				padding 10px
				margin-bottom 12px
				&:nth-child(1)
					border 1px solid #f6f6f6
					flex-basis 40%
				&:nth-child(2)
					display flex
					align-items center
					justify-content center
					font-family $Bold
					font-size 0.625rem
					line-height 11px
					color $sidebarbg
					text-transform uppercase
					flex-basis 20%
				&:nth-child(3)
					border 1px solid #f6f6f6
					flex-basis 40%
				&-image
					height 100%
		&-bookmaker
			display flex
			flex-wrap wrap
			padding 20px
			justify-content space-between
			border-bottom 1px solid #F1F1F1
			&:last-child
				border-bottom none
			&-item
				display flex
				&:nth-child(1)
					flex-basis 65%
					display flex
					flex-wrap wrap
					justify-content space-between
				&:nth-child(2)
					flex-basis 30%
				&-prize
					height 50px
					width 50px
					position relative
					display flex
					justify-content center
					align-items center
					flex-direction column
					&-bg
						background-color $purple
						position absolute
						transform rotate(45deg)
						width 50px
						height 50px
						z-index 2
						top 0
						border-radius 16px
						left 0
						right 0
						bottom 0
					span
						z-index 3
						position relative
						color $white
						font-size 0.625rem
						line-height 10px
						font-family $Regular
						&:nth-child(3)
							margin 2px 0
							color $yellow
							font-family $Bold
							font-size 0.75rem
							line-height 14px
				&-title
					font-size 0.625rem
					font-family $Bold
					color $black
					line-height 10px
				&-link
					&-content
						text-transform uppercase
						display inline-block
						color $purple
						grid-column 2 / 3
						font-size 0.625rem
						padding-bottom 2px
						line-height 10px
						font-family $Regular
						border-bottom 0.5px dashed rgba(84, 53, 124, 0.2)
						& span
							margin-left 3px
		&-filter
			padding 20px
			position relative
			&:nth-child(1),
			&:nth-child(2)
				border-bottom 1px solid #F1F1F1
			&-title
				text-transform uppercase
				font-family $Bold
				font-size 0.5rem
				line-height 11px
				margin-bottom 17px
				color $sidebarlink
			&-selector
				display flex
				align-items center
				position relative
				&-select
					position relative
					border 1px solid $purple
					padding 7px 11px
					border-radius 30px
					cursor pointer
					font-family $Regular
					font-size 0.625rem
					line-height 12px
					color $purple
					width 100%
					text-transform uppercase
					position relative
					&-arrow
						position absolute
						right 0
						top 0
						border-radius 0 26px 26px 0
						background $buttongradient
						height 28px
						width 30px
						display flex
						align-items center
						justify-content center
						& i
							font-size 14px
							transition .3s
							line-height 7px
							color $white
			&-filters
				background-color $white
				border-radius 8px
				margin-top 10px
				width 180px
				padding 20px
				z-index 2
				position fixed
				display none
				box-shadow 0px 12px 18px rgba(90, 62, 126, 0.2), 0px 0px 1px rgba(10, 31, 68, 0.1)
				&__option
					font-family $SemiBold
					font-size 0.625rem
					cursor pointer
					line-height 13px
					margin-bottom 10px
					color $black
					transition .3s
					&:last-child
						margin-bottom 0
					&:hover
						color #949494
		&-bonuses
			padding 20px
			position relative
			&:nth-child(1),
			&:nth-child(2)
				border-bottom 1px solid #F1F1F1
			&-title
				text-transform uppercase
				font-family $Bold
				font-size 0.5rem
				line-height 11px
				margin-bottom 17px
				color $sidebarlink
			&-cats
				display flex
				flex-wrap wrap
				justify-content space-between
				&-cat
					font-family $Regular
					font-size 0.675rem
					margin 0 2px
					line-height 12px
					color $purple
					border-radius 30px
					display flex
					align-items center
					border 1px solid $purple
					padding 7px 5px
					margin-bottom 5px
					justify-content center
					flex-grow 1
					transition .3s
					&:hover
						background-color $purple
						color $white
						box-shadow 0px 4px 20px rgba(84, 53, 124, 0.3)
			&-selector
				display flex
				align-items center
				position relative
				&-select
					position relative
					border 1px solid $purple
					padding 7px 11px
					border-radius 30px
					cursor pointer
					font-family $Regular
					font-size 0.625rem
					line-height 12px
					color $purple
					width 100%
					text-transform uppercase
					position relative
					&-arrow
						position absolute
						right 0
						top 0
						border-radius 0 26px 26px 0
						background $buttongradient
						height 28px
						width 30px
						display flex
						align-items center
						justify-content center
						& i
							font-size 14px
							transition .3s
							line-height 7px
							color $white
			&-filters
				background-color $white
				border-radius 8px
				margin-top 10px
				width 180px
				padding 20px
				z-index 2
				position fixed
				display none
				box-shadow 0px 12px 18px rgba(90, 62, 126, 0.2), 0px 0px 1px rgba(10, 31, 68, 0.1)
				&__option
					font-family $SemiBold
					font-size 0.625rem
					cursor pointer
					line-height 13px
					margin-bottom 10px
					color $black
					transition .3s
					&:last-child
						margin-bottom 0
					&:hover
						color #949494
		.mCSB_container
			display flex
			flex-direction column
		&-link
			text-transform .3s
			font-family $Bold
			line-height 13px
			font-size 0.75rem
			padding 15px 20px
			border-bottom 2px solid $sidebarlinkborder
			color $sidebarlink
			border-left 3px solid transparent
			transition .3s
			&:hover
				color $sidebarbottomlink
				border-left-color $sidebarbottomlink
			&-sublink
				text-transform uppercase
				display block
				padding-left 12px
				border-left 3px solid transparent
				font-size 0.625rem
				line-height 11px
				color $sidebarlink
				font-family $Bold
				transition .3s
				margin-top 15px
				&:hover
					border-color $purple
					color $purple
	&__block.open
		.sidebar__block-arrow
			transform rotate(180deg)
	&__block
		display none
		align-items center
		justify-content space-between
		padding 20px
		position relative
		flex-basis 100%
		cursor pointer
		max-height 53px
		background-color $sidebarbg
		&-yellow
			display none
			align-items center
			background-color $yellow
			transition .3s
			&:hover
				background-color $white
			.sidebar__block-text
				display flex
				justify-content center
				align-items center
				width 100%
				position relative
				height 18px
				& i
					color $black
					font-size 18px
					position absolute
					left 0
					top 0
				& span
					color $black
		&-link
			color #54357C
			display flex
			align-items center
			justify-content center
			border-bottom 1px dashed rgba(84, 53, 124, 0.2)
			transition .3s
			position relative
			z-index 3
			padding-bottom 3px
			& i
				font-size 0.75rem
				transition .3s
			&-text
				margin-left 5px
				font-family $Regular
				color #54357C
				line-height 13px
				font-size 0.625rem
				text-transform uppercase
			&:hover
				border-color #54357C
		&-text
			font-family $Bold
			font-size 0.625rem
			line-height 11px
			text-transform uppercase
			color $white
		&-arrow
			transition .3s
		&-arrow i
			color $sidebararrow
		&:last-child
			position absolute
			bottom 0
			max-height 53px
			background none
			width 220px
			align-self flex-end
			display flex
			align-items center
			justify-content center
			background-color #F9F9F9
		&-bg
			position absolute
			height 53px
			left 0
.rotated-filter-arrow
	transform rotate(180deg)
.show-select
	display block
@media (max-height:800px)
	.sidebar
		&__container
			overflow-y auto
@media (max-width:991px)
	.sidebar
		display none
