.forecast-single
	padding-top 25px
	&__content
		margin-top 20px
		margin-bottom 50px
		display flex
		flex-wrap wrap
		border-radius 15px
		padding 25px
		background-color $white
		justify-content space-between
		position relative
		&-title
			font-family $Bold
			font-size 1.125rem
			line-height 24px
			color $text
			flex-basis 100%
			padding-bottom 15px
			&-text
				display inline-block
			&-date
				display inline-block
		&-text
			font-family $Regular
			font-size 0.75rem
			color $text
			padding-bottom 20px
			line-height 18px
			& p
				margin-bottom 10px
			&-video
				float right
				position relative
				width 40%
				&:hover .forecast-single__content-text-video-img-play
					transform scale(.9)
				&-img
					position relative
					margin-left 20px
					& img
						border-radius 15px
						width 100%
					&-play
						position absolute
						left calc(50% - 24.5px)
						top calc(50% - 24.5px)
						transition .3s
						cursor pointer
				&-block
					background-color $white
					border-radius 15px
					padding 22px
					display flex
					align-items center
					position relative
					bottom 31px
					width 80%
					margin-left 10px
					justify-content center
					left 10%
					box-shadow 0px 12px 18px rgba(90, 62, 126, 0.05), 0px 0px 1px rgba(10, 31, 68, 0.1)
					&-link
						display flex
						align-items center
						padding-bottom 2px
						border-bottom 1px dashed rgba(84, 53, 124, 0.2)
						transition .3s
						&:hover
							border-color $purple
						& i
							color $purple
						& span
							margin-left 5px
							font-family $Regular
							font-size 0.75rem
							line-height 14px
							color $purple
		&-desc
			background-color $purple
			border-radius 15px
			flex-basis 75%
			left 12.5%
			right 12.5%
			padding 15px 25px
			font-family $Regular
			font-size 0.75rem
			line-height 18px
			color $white
			bottom -35px
			position absolute
	&__heading
		margin-bottom 20px
		display flex
		justify-content space-between
		flex-wrap wrap
		&-block
			position relative
			&:nth-child(1)
				display flex
				height 300px
				flex-wrap wrap
				flex-basis 71%
				padding 40px
				align-items flex-end
				background-color $white
				border-radius 15px
				overflow hidden
			&:nth-child(2)
				flex-basis 27%
				background-color $white
				border-radius 15px
				overflow hidden
			&-header
				padding 20px
				border-radius 15px
				box-shadow 0px 12px 18px rgba(90, 62, 126, 0.05), 0px 0px 1px rgba(10, 31, 68, 0.1)
				&-title
					font-size 1.125rem
					font-family $Bold
					line-height 24px
					color $text
					margin-bottom 5px
				&-text
					font-size 0.75rem
					line-height 16px
					color #5a5a5a
					font-family $Regular
			&-items
				display flex
				flex-wrap wrap
				&-item
					padding 20px
					flex-basis 100%
					display flex
					justify-content center
					&:nth-child(1)
						border-bottom 1px solid #f1f1f1
					&-block
						&:nth-child(1)
							flex-basis 40%
						&:nth-child(2)
							flex-basis 40%
							padding-left 10px
						&-img
							margin-bottom 5px
						&-title
							color $text
							font-size 0.75rem
							line-height 14px
							font-family $SemiBold
							margin-bottom 3px
						&-price
							color $purple
							font-family $Bold
							font-size 1.125rem
							line-height 22px
						&-link
							border-bottom 1px dashed rgba(84, 53, 124, 0.2)
							padding-bottom 2px
							color $purple
							transition .3s
							& i
								font-size 10px
							& span
								margin-left 3px
								font-size  0.625rem
								line-height 10px
								font-family $Regular
							&:hover
								border-color $purple
			&-bg
				position absolute
				height 100%
				width 100%
				top 0
				z-index 1
				left 0
			&-shadow
				z-index 2
				background-color rgba(0,0,0,.4)
				position absolute
				height 100%
				width 100%
				top 0
				left 0
			&-info
				&-title
					z-index 3
					text-transform uppercase
					position relative
					font-family $Bold
					font-size 1.75rem
					line-height 34px
					color $white
					flex-basis 100%
					margin-bottom 15px
					& span
						&:nth-child(2)
							margin 0 8px
				&-cats
					flex-basis 100%
					z-index 3
					position relative
					display flex
					&-item
						& i
							font-size 14px
							color $yellow
						& span
							margin-left 5px
							margin-right 15px
							color $white
							font-family $Regular
							font-size 0.875rem
							line-height 17px
							&:nth-child(3)
								text-transform uppercase
	&__container
		margin-top 20px
		margin-bottom 20px
		display flex
		justify-content space-between
		&-bonus
			max-height 220px
			background-color #54357C
			border-radius 15px
			flex-basis 27%
			position relative
			display flex
			flex-wrap wrap
			&-bg
				right 0
				width 100%
				height 100%
				top 0
				position absolute
				z-index 1
			&-block
				position relative
				flex-basis 100%
				&:nth-child(1)
					display flex
					z-index 2
					padding 21px 20px
					justify-content space-between
					border-bottom 1px solid #f1f1f1
				&:nth-child(2)
					padding 15px 25px
					z-index 2
				&-img
					flex-basis 55%
					& img
						width 100%
				&-link
					background linear-gradient(170.05deg, #FAD94E 25.2%, #EF9C4F 79.4%)
					box-shadow 0px 4px 20px rgba(250, 217, 78, 0.3)
					border-radius 25px
					font-family $Bold
					padding 11px
					width 100%
					text-align center
					font-size 0.75rem
					text-transform uppercase
					color $white
					transition .3s
					display block
					margin-bottom 9px
					&:hover
						background $white
						color #FAD94E
				&-text
					font-size 0.6rem
					line-height 13px
					text-align center
					color #e3e3e3
					font-family $Regular
				&-price
					flex-basis 40%
					display flex
					flex-wrap wrap
					&-title
						font-family $SemiBold
						font-size 0.75rem
						line-height 14px
						flex-basis 100%
						margin-bottom 2px
						color $white
					&-text
						color $yellow
						font-family $Bold
						flex-basis 100%
						line-height 22px
						font-size 1.125rem
		&-vote
			background-color $white
			border-radius 15px
			flex-basis 71%
			display flex
			position relative
			flex-wrap wrap
			&-block
				flex-basis 100%
				border-bottom 1px solid #f1f1f1
				padding 20px 25px
				display flex
				flex-direction column
				justify-content center
				&-bg
					right 0
					width 100%
					height 100%
					top 0
					position absolute
					z-index 1
				&-content
					display flex
					align-items center
					& p
						font-family $Bold
						font-size 0.75rem
						line-height 18px
						color $text
						& span
							margin-left 3px
							font-family $Regular
							font-size 0.75rem
							line-height 18px
							color $text
					&-count
						display flex
						margin-left 8px
						align-items center
						font-family $Regular
						font-size 0.625rem
						line-height 14px
						padding 5px
						color $white
						border-radius 6px
						background-color $purple
						&-number
							margin-left 2px
							font-size 0.625rem
							color $white
							line-height 14px
							font-family $Bold
				&-blocks
					display flex
					&-item
						display flex
						align-items center
						margin-right 15px
						margin-bottom: 12px;
						& i
							color $purple
							margin-right 3px
							font-size 13px
						& span
							font-family $Regular
							font-size 0.75rem
							line-height 14px
							color #7d7d7d
				&-title
					font-family $Bold
					font-size 1.125rem
					line-height 24px
					color $text
					margin-bottom 12px
					display flex
					align-items center
					& p
						color $purple
						margin 0 4px
						display inline-block
					&-status
						align-items center
						display flex
						&-block
							display flex
							margin-left 8px
							padding 6px 9px
							border-radius 6px
							& i
								color $white
								font-size 14px
							&-yetnotplayed
								background #666666
							&-notplayed
								background #E22121
							&-played
								background #2AA201
							& span
								margin-left 3px
								font-family $Regular
								color $white
								font-size 0.75rem
								line-height 14px
			&-block60
				flex-basis 60%
				display flex
				align-items center
				padding 15px 25px
				border-right 1px solid #f1f1f1
				&-question
					font-family $Bold
					color $text
					flex-basis 38%
					font-size 0.75rem
					line-height 18px
				&-result
					flex-basis 68%
					display flex
					flex-wrap wrap
					&-bar
						flex-basis 100%
						background-color #666666
						height 14px
						border-radius 4px
						position relative
						margin-bottom 6px
						overflow hidden
						&-green
							width 75%
							background-color #2AA201
							position absolute
							height 100%
							left 0
						&-red
							width 25%
							background-color #E22121
							position absolute
							height 100%
							right 0
					&-button
						display flex
						flex-basis 50%
						&:nth-child(3)
							justify-content flex-end
						&-yes
							display inline-block
							border-bottom 1px dashed rgba(42, 162, 1, 0.2)
							& i
								color #2AA201
							& span
								margin-left 5px
								color #2AA201
								font-family $Regular
								font-size 0.75rem
								line-height 14px
						&-no
							display inline-block
							border-bottom 1px dashed rgba(226, 33, 33, 0.2)
							& i
								color #E22121
							& span
								margin-left 5px
								color #E22121
								font-family $Regular
								font-size 0.75rem
								line-height 14px
			&-block40
				flex-basis 40%
				padding 15px 25px
				&-percent
					font-family $Bold
					font-size 1.125rem
					line-height 24px
					color #2AA201
				&-text
					font-family $Regular
					font-size 0.75rem
					line-height 14px
					& span
						margin-left 3px
					&-green
						font-family $Bold
						color #2AA201
					&-red
						font-family $Bold
						color #E22121
					&-gray
						font-family $Bold
						color #666666
	&__back
		display none
		position relative
		padding 12px
		border-radius 15px
		justify-content center
		align-items center
		background-color $yellow
		transition .3s
		margin-bottom 20px
		&:hover
			background-color $white
		& i
			color $black
			font-size 18px
		& span
			color $black
			margin-left 12px
			font-family $Bold
			font-size 0.75rem
			text-transform uppercase
			line-height 11px
	&-block
		margin-top 20px
		box-shadow 0px 12px 18px rgba(90, 62, 126, 0.05), 0px 0px 1px rgba(10, 31, 68, 0.1)
		margin-bottom 20px
		padding 25px
		border-radius 15px
		background-color $white
		&:last-child
			margin-bottom 0
		&-header
			display flex
			align-items center
			justify-content space-between
			&-block
				&:nth-child(1)
					flex-basis 75%
					display grid
					grid-template-columns repeat(11, 1fr)
					align-items center
				&:nth-child(2)
					flex-basis 20%
					display flex
					flex-wrap wrap
					text-align center
				&-button
					background linear-gradient(158.89deg, #9537A5 25.2%, #7140B3 79.4%)
					box-shadow 0px 4px 20px rgba(84, 53, 124, 0.3)
					border-radius 25px
					font-family $Bold
					padding 11px 21px
					font-size 0.75rem
					text-transform uppercase
					color $white
					width 100%
					margin-bottom 9px
					display inline-block
					transition .3s
					border 2px solid transparent
					&:hover
						background $white
						color $purple
						border 2px solid $purple
				&-text
					color #6f6f6f
					font-family $Regular
					font-size 0.75rem
					line-height 14px
				&-photo
					grid-row 1 / 3
					grid-column 1 / 2
				&-title
					grid-row 1 / 2
					grid-column 2 / 12
					display flex
					margin-bottom 5px
					align-items center
					margin-left 20px
					&-text
						& p
							font-family $Bold
							font-size 1.125rem
							line-height 24px
							color $purple
							margin-right 8px
					&-link
						margin 0 4px
						width 16px
						height 16px
				&-content
					grid-row 2 / 3
					grid-column 2 / 12
					margin-left 20px
					&-text
						font-family $Regular
						font-size 0.75rem
						line-height 18px
						color #5a5a5a
	&__cats
		margin-top 20px
		background-color $white
		border-radius 15px
		overflow hidden
		display flex
		flex-wrap wrap
		margin-bottom 20px
		&-block
			padding 25px
			display flex
			flex-basis 100%
			&:nth-child(1)
				border-bottom 1px solid #f1f1f1
			&-title
				font-family $Bold
				font-size 1.125rem
				line-height 24px
				color $text
				margin-right 8px
			&-links
				font-family $Regular
				font-size 1.125rem
				line-height 24px
				color $purple
				&-link
					font-family $Regular
					font-size 1.125rem
					line-height 24px
					color $purple
					margin-left 4px
					border-bottom 1px dashed $purple
			&-tags
				display flex
				&-tag
					font-size 0.75rem
					line-height 14px
					font-family $Regular
					color $purple
					border-radius 30px
					border 1px solid $purple
					padding 8px 24px
					margin-left 10px
					transition .3s
					&:hover
						background $buttongradient
						color $white
						border-color transparent
	&__relatedtitle
		margin-top 20px
		padding 20px 25px
		background-color $white
		border-radius 15px
		&-title
			font-family $Bold
			font-size 1.125rem
			line-height 24px
			color $text
	&__blocks
		margin-top 20px
		margin-bottom 20px
		display flex
		flex-wrap wrap
		justify-content space-between
		.swiper-container-forecast-single
			width 100%
		.swiper-pagination-bullets
			display none
			bottom 0
		&-block
			box-shadow 0px 12px 18px rgba(90, 62, 126, 0.05), 0px 0px 1px rgba(10, 31, 68, 0.1)
			flex-basis calc(33.33334% - 15px)
			background-color $white
			border-radius 15px
			&:nth-child(3n+3)
				margin-right 0
			&__body
				padding 20px 25px
				height 250px
				display flex
				flex-wrap wrap
				border-radius 15px 15px 0 0
				&-desc
					display flex
					flex-basis 100%
					flex-wrap wrap
					height 50px
					&-item
						i
							color $yellow
							margin-right 5px
							font-size 0.625rem
						span
							color $white
							font-size 0.625rem
							margin-right 15px
							text-transform uppercase
							font-family $Regular
				&-titles
					align-self flex-end
					flex-basis 100%
					&-category
						margin-bottom 10px
						font-family $Regular
						color $white
						text-transform uppercase
						font-size 0.75rem
						line-height 14px
						display flex
						align-items center
						i
							color $yellow
							margin-right 4px
					&-title
						font-size 1.125rem
						font-family $Bold
						line-height 24px
						color $white
						margin-bottom 6px
					&-rate
						&-container
							background $purple
							padding 7px 10px
							display inline-block
							border-radius 6px
							span
								font-size 0.75rem
								color $white
								line-height $white
								&:nth-child(1)
									font-family $Regular
								&:nth-child(2)
									margin-left 3px
									font-family $Bold
			&__footer
				padding 15px 25px
				display grid
				grid-template-columns 15% 52% 33%
				&-photo
					grid-row 1 / 3
					height 32px
					width 32px
					& img
						width 100%
				&-title
					grid-row 1 / 2
					font-family $SemiBold
					font-size 0.875rem
					color $text
					line-height 17px
				&-author
					grid-row 2 / 3
					color $text
					font-family $Regular
					line-height 18px
					font-size 0.75rem
				&-button
					grid-row 1 / 3
					display flex
					align-items center
					justify-content center
					border-radius 25px
					font-family $Bold
					padding 11px
					font-size 0.75rem
					text-transform uppercase
					color $white
					box-shadow 0px 4px 20px rgba(84, 53, 124, 0.3)
					background linear-gradient(158.89deg, #9537A5 25.2%, #7140B3 79.4%)
					transition .3s
					border 2px solid transparent
					&:hover
						background $white
						color $purple
						border 2px solid $purple
					i
						display none
		&-button
			margin 20px auto 0 auto
			&-item
				background linear-gradient(158.89deg, #9537A5 25.2%, #7140B3 79.4%)
				box-shadow 0px 4px 20px rgba(84, 53, 124, 0.3)
				border-radius 25px
				font-family $Bold
				padding 11px 21px
				font-size 0.75rem
				text-transform uppercase
				color $white
				display inline-block
				transition .3s
				border 2px solid transparent
				&:hover
					background $white
					color $purple
					border 2px solid $purple
	&__comments
		margin-top 20px
		background-color $white
		border-radius 15px
		&-titles
			display flex
			padding 20px 25px
			align-items center
			justify-content space-between
			border-bottom 1px solid #f1f1f1
			&-title
				font-size 1.125rem
				line-height 24px
				font-family $Bold
				color $text
		&-form
			padding 25px
			display flex
			justify-content space-between
			border-bottom 1px solid #f1f1f1
