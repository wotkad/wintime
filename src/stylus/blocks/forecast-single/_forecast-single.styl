			&-input
				flex-basis 75%
				padding 15px
				border-radius 10px
			& button
				cursor pointer
				width 100%
			&-button
				flex-basis 23%
				background linear-gradient(158.89deg, #9537A5 25.2%, #7140B3 79.4%)
				box-shadow 0px 4px 20px rgba(84, 53, 124, 0.3)
				border-radius 25px
				font-family $Bold
				font-size 0.75rem
				text-transform uppercase
				color $white
				display inline-block
				transition .3s
				border 2px solid transparent
				&:hover
					background $white
					color $purple
					border 2px solid $purple
		&-commentlist
			padding 15px 0 15px
			&-item
				border-bottom 1px solid #f1f1f1
				padding 15px 25px
				display grid
				grid-template-columns repeat(12, 1fr)
				&:last-child
					border none
				&-content
					display flex
					height 100%
					flex-wrap wrap
					grid-column 1 / 11
