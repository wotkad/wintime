	.forecast-single
		&-block
			&-header
				flex-wrap wrap
				&-block
					&:nth-child(1)
						flex-basis 100%
						margin-bottom 20px
					&:nth-child(2)
						justify-content center
						flex-basis 100%
					&-content
						grid-column 1 / 12
					&-title
						flex-wrap wrap
						&-text
							flex-basis 100%
							margin-bottom 10px
							& p
								display inline-block
					&-photo
						grid-row 1 / 2
		&__comments
			&-titles
				flex-wrap wrap
				padding-bottom 25px
