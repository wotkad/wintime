						flex-basis 100%
						font-family $Regular
						font-size 0.75rem
						line-height 18px
						color $text
						margin-bottom 10px
					&-photo
						flex-basis 100%
						display flex
						align-items center
						& img
							width 32px
							height 32px
						&-title
							font-family $SemiBold
							font-size 0.875rem
							line-height 17px
							color $text
							margin-left 16px
				&-info
					grid-column 11 / 13
					display flex
					height 100%
					flex-wrap wrap
					justify-content flex-end
					&-date
						flex-basis 100%
						font-size 0.75rem
						line-height 18px
						font-family $Regular
						color $sidebarlink
						text-align right
					&-likes
						justify-content flex-end
						flex-basis 100%
						display flex
						align-items flex-end
						&-dislike
							& span
								font-family $Regular
								font-size 0.75rem
								color $sidebarlink
								margin-left 5px
								line-height 19px
							& i
								color #fa4e4e
						&-like
							margin-left 15px
							& span
								font-family $Regular
								font-size 0.75rem
								color $sidebarlink
								margin-left 5px
								line-height 19px
							& i
								color #22c993
