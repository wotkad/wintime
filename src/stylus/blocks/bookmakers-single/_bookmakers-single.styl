.bookmakers-single
	margin-top 25px
	&__back
		display none
		position relative
		padding 12px
		border-radius 15px
		justify-content center
		align-items center
		background-color $yellow
		transition .3s
		margin-bottom 20px
		&:hover
			background-color $white
		& i
			color $black
			font-size 18px
		& span
			color $black
			margin-left 12px
			font-family $Bold
			font-size 0.75rem
			text-transform uppercase
			line-height 11px
	&__header
		display flex
		justify-content space-between
		flex-wrap wrap
		margin-bottom 20px
		&-block
			border-radius 15px
			padding 35px 50px
			&:nth-child(1)
				flex-basis calc(65% - 20px)
				display flex
				flex-wrap wrap
				margin-right 20px
				min-height 210px
			&:nth-child(2)
				background-color $white
				flex-basis 35%
				padding 20px 25px
				min-height 210px
			&-title
				color $text
				font-size 1.125rem
				line-height 24px
				font-family $Bold
				margin-bottom 20px
			&-li
				display flex
				align-items center
				margin-bottom 12px
				& span
					font-family $SemiBold
					color $text
					font-size 0.75rem
					line-height 18px
					margin-left 10px
				& i
					font-size 12px
					color $yellow
			&-image
				flex-basis 100%
				& img
					width 220px
			&-link
				width 200px
				display flex
				align-items center
				height 42px
				justify-content center
				&:nth-child(2)
					background linear-gradient(158.89deg, #9537A5 25.2%, #7140B3 79.4%)
					box-shadow 0px 4px 20px rgba(84, 53, 124, 0.3)
					border-radius 25px
					font-family $Bold
					padding 11px
					text-align center
					font-size 0.75rem
					text-transform uppercase
					color $white
					transition .3s
					border 2px solid transparent
					align-self flex-end
					&:hover
						background $white
						color $purple
						border 2px solid $purple
				&:nth-child(3)
					align-self flex-end
					color $white
					font-family $Bold
					font-size 0.75rem
					line-height 14px
					transition .3s
				&:hover
					color $purple
	&__review
		margin-top 20px
		display flex
		justify-content space-between
		margin-bottom 20px
		&-block
			background-color $white
			border-radius 15px
			&:nth-child(1)
				flex-basis calc(75% - 20px)
				max-width calc(75% - 20px)
				margin-right 20px
			&:nth-child(2)
				flex-basis 25%
				max-width 25%
				max-height 402px
			&-titles
				display flex
				padding 25px
				border-bottom 1px solid #f1f1f1
				&-title
					color $text
					font-size 1.125rem
					line-height 24px
					font-family $Bold
			&-text
				padding 25px
				position relative
				&-active
					.bookmakers-single__review-block-text-content
						max-height 100%
					.bookmakers-single__review-block-text-shadow
						display none
					.bookmakers-single__review-block-text-button i
						transform rotate(180deg)
				&-title
					line-height 21px
					font-size 1rem
					font-family $SemiBold
					color $text
					margin-bottom 10px
				&-content
					font-size 0.75rem
					line-height 18px
					font-family $Regular
					color $text
					margin-bottom 20px
					overflow hidden
					max-height 75px
				&-button
					background linear-gradient(158.89deg, #9537A5 25.2%, #7140B3 79.4%)
					box-shadow 0px 4px 20px rgba(84, 53, 124, 0.3)
					border-radius 25px
					font-family $Bold
					padding 11px
					text-align center
					font-size 0.75rem
					text-transform uppercase
					color $white
					transition .3s
					border 2px solid transparent
					align-self flex-end
					width 220px
					cursor pointer
					position relative
					& i
						margin-left 5px
						font-size 18px
						position absolute
						top 9px
					&:after
						content 'Скрыть'
						display none
					&:hover
						background $white
						color $purple
						border 2px solid $purple
				&-shadow
					background linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, #FFFFFF 89.6%)
					position absolute
					bottom 90px
					left 0
					width 100%
					height 134px
			&-items
				padding 5px 0
				position relative
				width 100%
				max-width 100%
				.swiper-container-bookmakers-single
					width 100%
				.swiper-pagination,
				.swiper-button-prev,
				.swiper-button-next
					display none
				.swiper-pagination
					bottom: -40px;
					width: 100%;
					justify-content: center;
					.swiper-pagination-bullet
						margin 0 4px
				&-item
					display flex
					align-items center
					justify-content flex-start
					padding 20px 25px
					border-bottom 1px solid #f1f1f1
					&:last-child
						border-bottom none
					&-text
						margin-left 20px
						font-size 0.75rem
						line-height 18px
						font-family $Regular
	&__titles
		background-color $white
		border-radius 15px
		display flex
		margin-top 20px
		padding 25px
		justify-content space-between
		align-items center
		margin-bottom 20px
		box-shadow 0px 12px 18px rgba(90, 62, 126, 0.05), 0px 0px 1px rgba(10, 31, 68, 0.1)
		&-title
			font-family $Bold
			font-size 1.125rem
			color $text
			line-height 24px
	&__blocked
		&__blocks
			display flex
			justify-content space-between
			border-radius 15px
			margin-bottom 10px
			flex-wrap wrap
			box-shadow 0px 12px 18px rgba(90, 62, 126, 0.05), 0px 0px 1px rgba(10, 31, 68, 0.1)
			&-active
				.bookmakers-single__blocked__blocks-block
					&:nth-child(1)
						border-radius 15px 0 0 0
					&:nth-child(2)
						border-radius 0 15px 0 0
					&:nth-child(3)
						height 100%
						padding 30px
						border-top 1px solid #F1F1F1
				.bookmakers-single__blocked__blocks-block-item__links-button-active
					&:after
						display block
					.bookmakers-single__blocked__blocks-block-item__links-button-item span
						display none
			&:last-child
				margin-bottom 20px
			&-block
				display flex
				flex-wrap wrap
				&:nth-child(1)
					flex-basis 25%
					border-radius 15px 0 0 15px
				&:nth-child(2)
					flex-basis 75%
					padding 30px
					border-radius 0 15px 15px 0
					background-color $white
				&:nth-child(3)
					flex-basis 100%
					padding 0
					border-radius 0 0 15px 15px
					background-color $white
					height 0
					overflow hidden
				&-text
					& p
						font-family $Regular
						font-size 0.75rem
						line-height 18px
						margin-bottom 10px
						color $text
				&-item
					&:nth-child(1)
						flex-basis 75%
					&:nth-child(2)
						flex-basis 25%
					&__body
						&-title
							margin-bottom 10px
							align-items center
							display flex
							font-size 1.125rem
							line-height 24px
							font-family $Bold
							color $text
							&-desc
								margin-left 15px
								border-radius 6px
								font-family $Bold
								font-size 0.75rem
								display flex
								align-items center
								line-height 13px
								justify-content center
								padding 8px 15px
								background-color $yellow
						&-text
							color #5a5a5a
							font-family $Regular
							line-height 18px
							font-size 0.75rem
					&__links
						width 100%
						display flex
						align-items center
						flex-wrap wrap
						&-button
							flex-basis 100%
							display flex
							align-items center
							justify-content center
							&:nth-child(1)
								background linear-gradient(158.89deg, #9537A5 25.2%, #7140B3 79.4%)
								box-shadow 0px 4px 20px rgba(84, 53, 124, 0.3)
								border-radius 25px
								font-family $Bold
								padding 11px
								text-align center
								margin-bottom 10px
								font-size 0.75rem
								text-transform uppercase
								color $white
								transition .3s
								border 2px solid transparent
								&:hover
									background none
									color $purple
									border 2px solid $purple
							&:nth-child(2)
								border 2px solid $purple
								box-shadow 0px 4px 20px rgba(84, 53, 124, 0.3)
								border-radius 25px
								font-family $Bold
								padding 11px
								font-size 0.75rem
								text-transform uppercase
								color $purple
								text-align center
								transition .3s
								&:hover
									background linear-gradient(158.89deg, #9537A5 25.2%, #7140B3 79.4%)
									color $white
									border 2px solid transparent
							&-active
								&:after
									content 'Скрыть'
									display none
	&__how
		margin-bottom 20px
		&__titles
			background-color $white
			border-radius 15px 15px 0 0
			display flex
			margin-top 20px
			padding 25px
			align-items center
			border-bottom 1px solid #f1f1f1
			&-title
				font-family $Bold
				font-size 1.125rem
				color $text
				line-height 24px
		&__blocks
			background-color $white
			display flex
			border-radius 0 0 15px 15px
			&-block
				&:nth-child(1)
					padding 20px 25px
					flex-basis 65%
					border-right 1px solid #f1f1f1
				&:nth-child(2)
					flex-basis 35%
				&-list
					& p
						color $purple
						font-family $Bold
						display flex
						margin-bottom 15px
						& span
							display inline-block
							margin-left 5px
							color $text
							font-size 0.75rem
							line-height 18px
							font-family $Regular
				&-video
					padding 20px
					height 100%
					text-align center
					&-image
						position relative
						display block
						& img
							border-radius 15px
							&:nth-child(2)
								position absolute
								top calc(50% - 24.5px)
								left calc(50% - 24.5px)
								transition transform .3s
						&:hover img:nth-child(2)
							transform scale(.9)
					&-link
						border-bottom 1px dashed rgba(84, 53, 124, 0.2)
						font-family $Regular
						font-size 0.75rem
						line-height 14px
						padding-bottom 2px
						margin-top 15px
						color $text
						transition .3s
						&:hover
							color $purple
							border-color $purple
	&__clients
		&__titles
			background-color $white
			border-radius 15px 15px 0 0
			display flex
			align-items center
			justify-content space-between
			margin-top 20px
			flex-wrap wrap
			padding 25px
			align-items center
			border-bottom 1px solid #f1f1f1
			&-title
				font-family $Bold
				font-size 1.125rem
				color $text
				line-height 24px
			&-buttons
				display flex
				justify-content space-between
				&-button
					cursor pointer
					&:nth-child(1)
						background $white
						border-radius 25px
						font-family $Bold
						padding 11px 21px
						font-size 0.75rem
						text-transform uppercase
						color $purple
						display inline-block
						width 220px
						text-align center
						transition .3s
						border 2px solid $purple
						&:hover
							background $buttongradient
							color $white
							border 2px solid $transparent
					&:nth-child(2)
						text-align center
						margin-left 20px
						background $buttongradient
						box-shadow 0px 4px 20px rgba(84, 53, 124, 0.3)
						border-radius 25px
						font-family $Bold
						padding 11px 21px
						width 220px
						font-size 0.75rem
						text-transform uppercase
						color $white
						display inline-block
						transition .3s
						border 2px solid transparent
						&:hover
							background $white
							color $purple
							border 2px solid $purple
		&__slider
			position relative
			&-container
				border-radius 0 0 15px 15px
				overflow hidden
				background-color $white
				&-slide
					border-right 1px solid #f1f1f1
					&-header
						padding 20px 25px
						background-color $white
						display flex
						&-image
							img
								max-height 32px
								max-width  32px
						&-titles
							margin-left 16px
							display flex
							flex-wrap wrap
							&-title
								flex-basis 100%
								color $text
								font-size 0.875rem
								line-height 17px
								font-family $SemiBold
								margin-bottom 5px
							&-rate
								flex-basis 100%
								display flex
								& span
									&:nth-child(1)
										font-size 0.75rem
										line-height 18px
										font-family $Bold
										color $text
									&:nth-child(2)
										font-size 0.75rem
										line-height 18px
										font-family $Regular
										color $text
										margin 0 2px
									&:nth-child(3)
										font-size 0.75rem
										line-height 18px
										font-family $Regular
										color $text
										margin-right 10px
								&-star
									margin 0 2px
									& i
										color $yellow
					&-body
						background-color $white
						padding 0px 25px 20px
						&-text
							font-family $Regular
							font-size 0.75rem
							line-height 18px
							color $text
							margin-bottom 10px
						&-link
							font-family $Regular
							font-size 0.75rem
							line-height 18px
							color $purple
							padding-bottom 2px
							border-bottom 1px dashed rgba(84, 53, 124, 0.2)
					&-footer
						background #f8f8f8
						padding 15px 25px
						display flex
						justify-content space-between
						&-date
							font-family $Regular
							font-size 0.75rem
							color $sidebarlink
							line-height 19px
						&-likes
							display flex
							justify-content space-between
							&-dislike
								& span
									font-family $Regular
									font-size 0.75rem
									color $sidebarlink
									margin-left 5px
									line-height 19px
								& i
									color #fa4e4e
							&-like
								margin-left 15px
								& span
									font-family $Regular
									font-size 0.75rem
									color $sidebarlink
									margin-left 5px
									line-height 19px
								& i
									color #22c993
			.swiper-pagination
				display none
				width 100%
				justify-content center
				align-items center
				height 70px
				.swiper-pagination-bullet
					margin 0 4px
.bookmakers-single__review-block-text-button.more-switch
	&:after
		display block
@media(max-width:1240px)
	.bookmakers-single
		&__clients
			&__slider
				padding-bottom 40px
				.swiper-pagination
					display flex
		&__how
			&__blocks
				flex-wrap wrap
				&-block
					&:nth-child(1)
						flex-basis 100%
					&:nth-child(2)
						flex-basis 100%
		&__blocked
			&__blocks
				&-block
					&:nth-child(1)
						flex-basis 40%
					&:nth-child(2)
						flex-basis 60%
					&-item
						&:nth-child(1)
							flex-basis 100%
						&:nth-child(2)
							flex-basis 100%
						&__links
							margin-top 25px
							justify-content space-between
							&-button
								flex-basis 45%
								&:nth-child(1)
									margin-bottom 0
		&__header
			&-block
				&:nth-child(1)
					min-height 300px
					flex-basis 100%
					margin-bottom 20px
					margin-right 0
				&:nth-child(2)
					flex-basis 100%
					min-height auto
					display flex
					flex-wrap wrap
				&-title
					flex-basis 100%
				&-li
					flex-basis 50%
		&__review
			flex-wrap wrap
			margin-bottom 60px
			&-block
				&:nth-child(1)
					flex-basis 100%
					max-width 100%
					margin-right 0
					margin-bottom 20px
				&:nth-child(2)
					flex-basis 100%
					max-width 100%
					display flex
					flex-wrap wrap
				&-titles
					flex-basis 100%
				&-items
					flex-basis 100%
					display flex
					flex-wrap
					&-item
						flex-basis 33%
						border-bottom none
						justify-content center
					.swiper-pagination,
					.swiper-button-prev,
					.swiper-button-next
						display flex
@media(max-width: 991px)
	.bookmakers-single
		&__back
			display flex
		&__blocked
			&__blocks
				&-block
					&-item
						&__body
							&-title
								flex-direction column
								align-items flex-start
								& span
									order 2
								&-desc
									margin-bottom 15px
									margin-left 0
									order 1
@media(max-width: 768px)
	.bookmakers-single
		&__header
			&-block
				padding 35px 0
				&:nth-child(1)
					justify-content: center;
					min-height 360px
				&-image
					text-align center
				&-li
					flex-basis 100%
		&__blocked
			&__blocks
				&-block
					&:nth-child(1)
						flex-basis 100%
						border-radius 15px 15px 0 0
						min-height 100px
					&:nth-child(2)
						border-radius 0 0 15px 15px
						flex-basis 100%
				&-active
					.bookmakers-single__blocked__blocks-block
						&:nth-child(1)
							border-radius 15px 15px 0 0
						&:nth-child(2)
							border-radius 0 0 0 0
		&__clients
			&__titles
				&-title
					flex-basis 100%
					margin-bottom 15px
				&-buttons
					flex-basis 100%
					&-button
						&:nth-child(1)
							width 48%
						&:nth-child(2)
							width 48%
@media(max-width: 600px)
	.bookmakers-single
		&__clients
			&__titles
				&-buttons
					display flex
					flex-wrap wrap
					&-button
						&:nth-child(1)
							width 100%
							margin-bottom 20px
						&:nth-child(2)
							margin-left 0
							width 100%
		&__how
			&__blocks
				&-block
					&-video
						&-image
							& img
								&:nth-child(1)
									width 100%
