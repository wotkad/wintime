.bonuses
	margin-top 30px
	&__filter
		display none
		box-shadow: 0px 12px 18px rgba(90, 62, 126, 0.05), 0px 0px 1px rgba(10, 31, 68, 0.1);
		flex-wrap wrap
		background-color #eee
		border-radius 15px
		justify-content space-between
		margin-bottom 20px
		margin-top 20px
		&-titles
			flex-basis 100%
			display flex
			justify-content space-between
			background-color #fefefe
			border-radius 15px
			align-items center
			padding 10px 20px
			&-title
				font-family $Bold
				line-height 24px
				font-size 1.125rem
				color $sidebarbg
			&-arrow
				cursor pointer
				transition .3s
				& i
					font-size 18px
					color $sidebarbg
		&__container
			display flex
			justify-content space-between
			flex-basis 100%
			padding 20px
			&-filter
				position relative
				padding-right 4.5%
				&-cats
					display flex
					flex-wrap wrap
					justify-content space-between
					&-cat
						font-family $Regular
						font-size 0.675rem
						margin 0 2px
						line-height 12px
						color $purple
						border-radius 30px
						display flex
						align-items center
						border 1px solid $purple
						padding 7px 5px
						margin-bottom 5px
						justify-content center
						flex-grow 1
						transition .3s
						&:hover
							background-color $purple
							color $white
							box-shadow 0px 4px 20px rgba(84, 53, 124, 0.3)
				&:nth-child(1)
					flex-basis 30%
					border-right 1px solid #f5f5f5
				&:nth-child(2)
					flex-basis 65.5%
					padding-right 0
					border none
				&-title
					text-transform uppercase
					font-family $Bold
					font-size 0.5rem
					line-height 11px
					margin-bottom 17px
					color $sidebarlink
				&-selector
					display flex
					align-items center
					position relative
					&-select
						position relative
						border 1px solid $purple
						padding 11px
						border-radius 30px
						cursor pointer
						font-family $Regular
						font-size 0.625rem
						line-height 12px
						color $purple
						width 100%
						text-transform uppercase
						position relative
						&-arrow
							position absolute
							right 0
							top 0
							border-radius 0 26px 26px 0
							background $buttongradient
							height 36px
							width 30px
							display flex
							align-items center
							justify-content center
							& i
								font-size 14px
								transition .3s
								line-height 7px
								color $white
				&-filters
					background-color $white
					border-radius 8px
					margin-top 10px
					width 180px
					padding 20px
					z-index 2
					position absolute
					display none
					box-shadow 0px 12px 18px rgba(90, 62, 126, 0.2), 0px 0px 1px rgba(10, 31, 68, 0.1)
					&__option
						font-family $SemiBold
						font-size 0.625rem
						cursor pointer
						line-height 13px
						margin-bottom 10px
						color $black
						transition .3s
						&:last-child
							margin-bottom 0
						&:hover
							color #949494
	&__text
		border-radius 15px
		background $white
		margin-bottom 20px
		padding 20px 25px
		box-shadow 0px 12px 18px rgba(90, 62, 126, 0.05), 0px 0px 1px rgba(10, 31, 68, 0.1)
		&-title
			font-family $Bold
			font-size 1.125rem
			line-height 24px
			color $text
			margin-bottom 15px
		&-desc
			font-size 0.75rem
			font-family $Regular
			color $text
			line-height 18px
	&__navigation
		display flex
		justify-content space-between
		align-items center
		&-numbers
			display flex
			&-number
				font-family $Regular
				font-size 1.125rem
				line-height 24px
				display flex
				align-items center
				justify-content center
				margin 0 5px
				transition .3s
				&:hover
					color $purple
				&-active
					border-radius 50%
					width 38px
					height 38px
					box-shadow 0px 4px 20px rgba(84, 53, 124, 0.3)
					color $white
					background $buttongradient
		&-prev,
		&-next
			p
				display block
				font-family $Bold
				font-size 0.75rem
				color $purple
				line-height 14px
				padding-bottom 2px
				text-transform uppercase
				transition .3s
				border-bottom 1px solid transparent
			i
				display none
				margin-top -1px
			&:hover
				border-color $purple
		&-next
			i
				margin-right -1px
		&-prev
			i
				margin-left -1px
	&__blocked
		margin-top 20px
		&__blocks
			display flex
			justify-content space-between
			border-radius 15px
			margin-bottom 10px
			flex-wrap wrap
			box-shadow 0px 12px 18px rgba(90, 62, 126, 0.05), 0px 0px 1px rgba(10, 31, 68, 0.1)
			&-active
				.bonuses__blocked__blocks-block
					&:nth-child(1)
						border-radius 15px 0 0 0
					&:nth-child(2)
						border-radius 0 15px 0 0
					&:nth-child(3)
						height 100%
						padding 30px
						border-top 1px solid #F1F1F1
				.bonuses__blocked__blocks-block-item__links-button-active
					&:after
						display block
					.bonuses__blocked__blocks-block-item__links-button-item span
						display none
			&:last-child
				margin-bottom 20px
			&-block
				display flex
				flex-wrap wrap
				&:nth-child(1)
					flex-basis 25%
					border-radius 15px 0 0 15px
				&:nth-child(2)
					flex-basis 75%
					padding 30px 25px 30px 30px
					border-radius 0 15px 15px 0
					background-color $white
				&:nth-child(3)
					flex-basis 100%
					padding 0
					border-radius 0 0 15px 15px
					background-color $white
					height 0
					overflow hidden
				&-text
					& p
						font-family $Regular
						font-size 0.75rem
						line-height 18px
						margin-bottom 10px
						color $text
				&-item
					&:nth-child(1)
						flex-basis 75%
					&:nth-child(2)
						flex-basis 25%
					&__body
						&-title
							margin-bottom 10px
							align-items center
							display flex
							font-size 1.125rem
							line-height 24px
							font-family $Bold
							color $text
							&-desc
								margin-left 15px
								border-radius 6px
								font-family $Bold
								font-size 0.75rem
								display flex
								align-items center
								line-height 13px
								justify-content center
								padding 8px 15px
								background-color $yellow
						&-text
							color #5a5a5a
							font-family $Regular
							line-height 18px
							font-size 0.75rem
					&__links
						width 100%
						display flex
						align-items center
						flex-wrap wrap
						&-button
							flex-basis 100%
							display flex
							align-items center
							justify-content center
							&:nth-child(1)
								background linear-gradient(158.89deg, #9537A5 25.2%, #7140B3 79.4%)
								box-shadow 0px 4px 20px rgba(84, 53, 124, 0.3)
								border-radius 25px
								font-family $Bold
								padding 11px
								text-align center
								margin-bottom 10px
								font-size 0.75rem
								text-transform uppercase
								color $white
								transition .3s
								border 2px solid transparent
								&:hover
									background none
									color $purple
									border 2px solid $purple
							&:nth-child(2)
								border 2px solid $purple
								box-shadow 0px 4px 20px rgba(84, 53, 124, 0.3)
								border-radius 25px
								font-family $Bold
								padding 11px
								font-size 0.75rem
								text-transform uppercase
								color $purple
								text-align center
								transition .3s
								&:hover
									background linear-gradient(158.89deg, #9537A5 25.2%, #7140B3 79.4%)
									color $white
									border 2px solid transparent
							&-active
								&:after
									content 'Скрыть'
									display none
@media(max-width: 1240px)
	.bonuses
		&__blocked
			&__blocks
				&-block
					&:nth-child(1)
						flex-basis 40%
					&:nth-child(2)
						flex-basis 60%
					&-item
						&:nth-child(1)
							flex-basis 100%
						&:nth-child(2)
							flex-basis 100%
						&__links
							margin-top 25px
							justify-content space-between
							&-button
								flex-basis 45%
								&:nth-child(1)
									margin-bottom 0
@media(max-width: 1140px)
	.bonuses
		&__navigation
			&-next,
			&-prev
				align-items center
				justify-content center
				border-radius 25px
				width 38px
				height 38px
				display flex
				font-size 16px
				text-transform uppercase
				color $white
				box-shadow 0px 4px 20px rgba(84, 53, 124, 0.3)
				background linear-gradient(158.89deg, #9537A5 25.2%, #7140B3 79.4%)
				transition .3s
				border 2px solid transparent
				&:hover
					background $white
					color $purple
					border 2px solid $purple
				p
					display none
				i
					display flex
@media(max-width: 991px)
	.bonuses__filter
		display flex
	.bonuses
		&__blocked
			&__blocks
				&-block
					&-item
						&__body
							&-title
								flex-direction column
								align-items flex-start
								& span
									order 2
								&-desc
									margin-bottom 15px
									margin-left 0
									order 1
@media(max-width: 768px)
	.bonuses
		&__blocked
			&__blocks
				&-block
					&:nth-child(1)
						flex-basis 100%
						border-radius 15px 15px 0 0
						min-height 100px
					&:nth-child(2)
						border-radius 0 0 15px 15px
						flex-basis 100%
				&-active
					.bookmakers-single__blocked__blocks-block
						&:nth-child(1)
							border-radius 15px 15px 0 0
						&:nth-child(2)
							border-radius 0 0 0 0
		&__filter
			&-titles
				padding 10px 20px
			&__container
				display flex
				justify-content space-between
				flex-basis 100%
				flex-wrap wrap
				&-filter
					margin-bottom 20px
					&:nth-child(1),
					&:nth-child(2)
						flex-basis 100%
						padding-right 0
						border-right none
